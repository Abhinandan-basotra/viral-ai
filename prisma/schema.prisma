generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int     @id  @default(autoincrement())
  username  String  @unique
  email     String  @unique
  password  String
  projects Project[]
}

model Project {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  description String?
  script      String
  scenes      Scene[]
  audio       Audio[]
  assets      Asset[]
  renderJobs  RenderQueue[]
  status      String    @default("Generating")
  expectedLength Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Scene {
  id            String        @id @default(cuid())
  project       Project       @relation(fields: [projectId], references: [id])
  projectId     String
  sceneNumber   Int
  description   String    
  startTime     String           // in seconds
  endTime       String          // in seconds
  finalUrl     String?         // final rendered video url
  imageAssets   Asset[]       @relation("SceneImages")
  audioAssets   Audio[]       @relation("SceneAudios")      
  renderJobs    RenderQueue[] 
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}


model Asset {
  id          String   @id @default(cuid())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  type        String 
  url         String
  status      String
  scenes      Scene[]  @relation("SceneImages")
  createdAt   DateTime @default(now())
}

model Audio {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  scene     Scene?   @relation(fields: [sceneId], references: [id], name: "SceneAudios")
  sceneId   String?
  type      String // "narration", "background"  
  text      String?
  voiceId   String?
  emotion   String?
  speed     Float?
  voice_stability Float?
  voice_similarity_boost Float?
  url       String?
  status    String
  duration  Int?     // in seconds
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt   @default(now())
}

model RenderQueue {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  scene     Scene?   @relation(fields: [sceneId], references: [id])
  sceneId   String?
  jobType   String   // "imageGeneration", "audioSync", "videoRender"
  priority  Int      @default(0)
  status    String   @default("pending") // "pending", "inProgress", "completed", "failed"
  attempts  Int      @default(0)
  workerId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tunes{
  id        Int     @id  @default(autoincrement())
  name      String  
  description String?
  url       String  
}