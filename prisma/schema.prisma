generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String     @id  @default(cuid())
  username  String
  email     String  @unique
  password  String
  projects Project[]
}

model Project {
  id             String   @id @default(cuid())
  userId         String
  title          String
  description    String?
  script         String
  status         String   @default("Generating")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expectedLength Int?
  finalUrl       String?
  progress       Int      @default(0)
  tuneId         Int?
  hasTune        Boolean  @default(false)
  hasCaption     Boolean  @default(false)
  assets         Asset[]
  audio          Audio[]
  user           User     @relation(fields: [userId], references: [id])
  scenes         Scene[]
}

model Scene {
  id            String        @id @default(cuid())
  project       Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId     String
  sceneNumber   Int
  description   String    
  status        String        @default("Generating")
  startTime     String           // in seconds
  endTime       String          // in seconds
  finalUrl     String?         // final rendered video url
  imageAssets   Asset[]       @relation("SceneImages")
  audioAssets   Audio[]       @relation("SceneAudios")      
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}


model Asset {
  id          String   @id @default(cuid())
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId   String
  type        String 
  url         String
  status      String
  scenes      Scene[]  @relation("SceneImages")
  createdAt   DateTime @default(now())
}

model Audio {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  scene     Scene?   @relation(fields: [sceneId], references: [id], name: "SceneAudios", onDelete: Cascade)
  sceneId   String?
  type      String // "narration", "background"  
  text      String?
  voiceId   String?
  emotion   String?
  speed     Float?
  voice_stability Float?
  voice_similarity_boost Float?
  url       String?
  status    String
  duration  Int?     // in seconds
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt   @default(now())
}

model Tunes{
  id        Int     @id  @default(autoincrement())
  name      String  
  description String?
  url       String  
}